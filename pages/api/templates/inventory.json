{
    "id": "inventory",
    "name": "在庫管理",
    "description": "商品の在庫状況を管理するためのテンプレートです。在庫数やステータスの確認・更新に最適です。",
    "exampleSheetUrl": "https://docs.google.com/spreadsheets/d/your_inventory_sheet_id",
    "columns": [
      {
        "name": "商品名",
        "type": "text",
        "input": true,
        "editable": true,
        "required": true
      },
      {
        "name": "在庫数",
        "type": "number",
        "input": true,
        "editable": true,
        "required": true
      },
      {
        "name": "ステータス",
        "type": "select",
        "options": ["在庫あり", "在庫少", "在庫切れ"],
        "input": true,
        "editable": true
      },
      {
        "name": "最終更新日",
        "type": "date",
        "input": false,
        "editable": false
      }
    ],
    "view": {
      "layout": "table",
      "searchable": true,
      "filterable": true
    }
  }
  